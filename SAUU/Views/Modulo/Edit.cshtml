@model SAUU.Data.Entities.Modulo

@{
    ViewData["Title"] = "Editar";
}

<div class="page-header">
    <h1>
        <i class="fa fa-address-card page-header-icon"></i>
        <a asp-action="Index">Modelos </a> > @ViewData["Title"]
    </h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idModulo" />
            <div class="form-group">
                <label asp-for="nombreModulo" class="control-label"></label>
                <input asp-for="nombreModulo" class="form-control" />
                <span asp-validation-for="nombreModulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idRol" class="control-label"></label>
                <select asp-for="idRol" asp-items="@(new SelectList(ViewBag.Roles, "idRol", "nombreRol"))"
                        class="form-control" required></select>
                <span asp-validation-for="idRol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                <a class="btn btn-labeled btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>


