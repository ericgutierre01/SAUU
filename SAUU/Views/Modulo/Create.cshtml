@model SAUU.Data.Entities.Modulo

@{
    ViewData["Title"] = "Nuevo Modulo";
}

<div class="page-header">
    <h1>
        <i class="fa fa-book page-header-icon"></i>
        <a asp-action="Index">Modelos</a> > @ViewData["Title"]
    </h1>
</div>
<span class="text-danger">
    @Html.ValidationSummary()
</span>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombreModulo" class="control-label"></label>
                <input asp-for="nombreModulo" class="form-control" required/>
                <span asp-validation-for="nombreModulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idRol" class="control-label"></label>
                <select asp-for="idRol" asp-items="@(new SelectList(ViewBag.Roles, "idRol", "nombreRol"))"
                        class="form-control" required></select>
                <span asp-validation-for="idRol" class="text-danger"></span>
            </div>
            <div class="panel-footer text-right">
                <button class="btn btn-labeled btn-success">
                    <span class="btn-label icon fa fa-save"></span>Guardar
                </button>
                <a asp-action="Index" class="btn btn-labeled btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>

