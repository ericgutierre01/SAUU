@model SAUU.Data.Entities.Estado

@{
    ViewData["Title"] = "Editar";
}

<div class="page-header">
    <h1><i class="fa fa-bar-chart-o page-header-icon"></i>@ViewData["Title"]</h1>
</div> <!-- / .page-header -->

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idEstado" />
            <div class="form-group">
                <labelclass ="control-label">
                    Nombre del Estado</label>
                    <input asp-for="nombreEstado" class="form-control" />
                    <span asp-validation-for="nombreEstado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Color</label>
                <input asp-for="colorEstado" type="color" class="form-control" />
                <span asp-validation-for="colorEstado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-labeled btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>

