@model SAUU.Models.EscuelaViewModel

@{
    ViewData["Title"] = "Borrar";
}

<div class="page-header">
    <h1><i class="fa fa-bar-chart-o page-header-icon"></i>@ViewData["Title"]</h1>
</div> <!-- / .page-header -->


<h3>Esta seguro que desea borrar esta escuela?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombreEscuela)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombreEscuela)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.idFacultad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombreFacultad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.correo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="idEscuela" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Cancelar</a>
    </form>
</div>
