@model SAUU.Data.Entities.Escuela

@{
    ViewData["Title"] = "Editar";
}
<div class="page-header">
    <h1>
        <i class="fa fa-book page-header-icon"></i>
        <a asp-action="Index">Escuelas </a> > @ViewData["Title"]
    </h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idEscuela" />
            <div class="form-group">
                <label asp-for="nombreEscuela" class="control-label"></label>
                <input asp-for="nombreEscuela" class="form-control" />
                <span asp-validation-for="nombreEscuela" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idFacultad" class="control-label"></label>
                <select asp-for="idFacultad" asp-items="@(new SelectList(ViewBag.Facultades, "idFacultad", "nombreFacultad"))"
                        class="form-control" required></select>
                <span asp-validation-for="idFacultad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="correo" class="control-label"></label>
                <input asp-for="correo" class="form-control" />
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-labeled btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>
