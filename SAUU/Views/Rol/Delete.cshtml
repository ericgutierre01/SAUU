@model SAUU.Data.Entities.Rol

@{
    ViewData["Title"] = "Borrar";
}

<div class="page-header">
    <h1>
        <i class="fa fa-book page-header-icon"></i>
        <a asp-action="Index">Roles</a> > @ViewData["Title"]
    </h1>
</div>

<h3>Esta Seguro que desea borrar este Rol?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombreRol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombreRol)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="idRol" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn bg-success"> Cancelar</a>
    </form>
</div>
