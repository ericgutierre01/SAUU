@model SAUU.Data.Entities.Rol

@{
    ViewData["Title"] = "Nuevo Rol";
}
<div class="page-header">
    <h1>
        <i class="fa fa-book page-header-icon"></i>
        <a asp-action="Index">Roles</a> > @ViewData["Title"]
    </h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombreRol" class="control-label"></label>
                <input asp-for="nombreRol" class="form-control" />
                <span asp-validation-for="nombreRol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary"/> |
                <a asp-action="Index" class="btn bg-danger"> Cancelar</a>
            </div>
        </form>
    </div>
</div>
