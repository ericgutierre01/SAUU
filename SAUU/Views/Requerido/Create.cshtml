@model SAUU.Data.Entities.Requerido

@{
    ViewData["Title"] = "Nuevo Requerido";
}
<div class="page-header">
    <h1>
        <i class="fa fa-book page-header-icon"></i>
        <a asp-action="Index">Modelos</a> > @ViewData["Title"]
    </h1>
</div>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nombre del Requerido</label>
                <input asp-for="nombreRequerido" class="form-control" required />
                <span asp-validation-for="nombreRequerido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-labeled btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>

