@model SAUU.Data.Entities.Requerido

@{
    ViewData["Title"] = "Edit";
}
<div class="page-header">
    <h1>
        <i class="fa fa-address-card page-header-icon"></i>
        <a asp-action="Index">Requeridos </a> > @ViewData["Title"]
    </h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idRequerido" />
            <div class="form-group">
                <label asp-for="nombreRequerido" class="control-label"></label>
                <input asp-for="nombreRequerido" class="form-control" />
                <span asp-validation-for="nombreRequerido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                <a class="btn btn-labeled btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

