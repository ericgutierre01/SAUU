@model SAUU.Data.Entities.Requerido

@{
    ViewData["Title"] = "Borrar";
}

<div class="page-header">
    <h1>
        <i class="fa fa-address-card page-header-icon"></i>
        <a asp-action="Index">Requeridos </a> > @ViewData["Title"]
    </h1>
</div>
<h3>Esta seguro que desea borrar este Requerido?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombreRequerido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombreRequerido)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="idRequerido" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success">Cencelar</a>
    </form>
</div>
